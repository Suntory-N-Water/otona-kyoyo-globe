{
  "permissions": {
    "allow": [
      "mcp__serena",
      "mcp__playwright",
      "mcp__context7",
      "mcp__deepwiki",
      "mcp__chrome-devtools",
      "mcp__kiri",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh run view:*)",
      "Bash(git log:*)",
      "Bash(gh run list:*)",
      "Bash(gh repo view:*)",
      "Bash(gh search issues:*)",
      "Bash(gh issue view:*)",
      "Bash(gh api:*)",
      "Bash(gh label list:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue comment:*)",
      "Bash(gh release:*)",
      "Bash(gh run rerun:*)",
      "Bash(pinact run:*)",
      "Bash(ghalint run:*)",
      "Bash(zizmor:*)",
      "Bash(agent-browser:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(bun add:*)",
      "Bash(bun remove:*)",
      "Bash(bun install:*)",
      "Bash(bun type-check:*)",
      "Bash(bun check:*)",
      "Bash(bun lint:*)",
      "Bash(bun format:*)",
      "WebFetch",
      "WebSearch",
      "Bash(uv:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Read(.env)",
      "Bash(.env)",
      "Read(.dev.vars)",
      "Write(.env*)",
      "NotebookEdit",
      "NotebookRead"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(rm:*)",
      "Bash(curl:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun run --silent -i ~/.claude/scripts/typescript/multi-command-check.ts -c format,lint:ai,type-check:ai"
          },
          {
            "type": "command",
            "command": "bun run --silent -i ~/.claude/scripts/typescript/fix-brackets.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bun run --silent -i ~/.claude/scripts/typescript/no-restricted-edit.ts"
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "bun run --silent -i ~/.claude/scripts/typescript/web-fetch-advice.ts"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node ~/.claude/scripts/statusline.js"
  },
  "plansDirectory": ".claude/plans",
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  }
}
