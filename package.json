{
  "name": "otona-kyoyo-globe",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "lint": "biome lint .",
    "lint:unsafe-fix": "biome lint --write --unsafe .",
    "lint:ai": "biome lint --reporter=github . 2>&1 | { grep '^::' || true; }",
    "type-check": "tsc --noEmit",
    "type-check:ai": "tsc --noEmit --pretty false",
    "ai-check": "bun run format && bun run lint:ai && bun run type-check:ai"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.3",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1"
  }
}
